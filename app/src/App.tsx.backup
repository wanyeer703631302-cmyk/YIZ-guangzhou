// Distorted Image Card Component
interface DistortedCardProps {
  item: GalleryItem;
  index: number;
  mousePosition: { x: number; y: number };
}

const DistortedCard = ({ item, index, mousePosition }: DistortedCardProps) => {
  const cardRef = useRef<HTMLDivElement>(null);
  const [transform, setTransform] = useState({ rotateX: 0, rotateY: 0, scale: 1 });
  const [isHovered, setIsHovered] = useState(false);

  useEffect(() => {
    if (!cardRef.current || isHovered) return;

    const card = cardRef.current;
    const rect = card.getBoundingClientRect();
    const cardCenterX = rect.left + rect.width / 2;
    const cardCenterY = rect.top + rect.height / 2;

    // Calculate distance from mouse to card center
    const deltaX = mousePosition.x - cardCenterX;
    const deltaY = mousePosition.y - cardCenterY;
    const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
    
    // Maximum effect radius
    const maxRadius = 400;
    const intensity = Math.max(0, 1 - distance / maxRadius);

    // Calculate rotation based on mouse position relative to card
    const maxRotate = 15;
    const rotateY = Math.max(-maxRotate, Math.min(maxRotate, (deltaX / maxRadius) * maxRotate * intensity));
    const rotateX = Math.max(-maxRotate, Math.min(maxRotate, -(deltaY / maxRadius) * maxRotate * intensity));

    setTransform({ rotateX, rotateY, scale: 1 + intensity * 0.02 });
  }, [mousePosition, isHovered]);

  const handleMouseEnter = () => {
    setIsHovered(true);
    setTransform({ rotateX: 0, rotateY: 0, scale: 1.05 });
  };

  const handleMouseLeave = () => {
    setIsHovered(false);
    setTransform({ rotateX: 0, rotateY: 0, scale: 1 });
  };

  // Calculate perspective origin based on card position in grid
  const row = Math.floor(index / 4);
  const col = index % 4;
  const perspectiveOrigin = `${25 + col * 16.66}% ${25 + row * 25}%`;

  return (
    <motion.div
      ref={cardRef}
      className="relative group cursor-pointer"
      initial={{ opacity: 0, y: 50 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6, delay: index * 0.1 }}
      onMouseEnter={handleMouseEnter}
      onMouseLeave={handleMouseLeave}
      style={{
        perspective: '1000px',
        perspectiveOrigin,
      }}
    >
      <div
        className="relative overflow-hidden rounded-lg transition-all duration-300 ease-out"
        style={{
          transform: `
            rotateX(${transform.rotateX}deg) 
            rotateY(${transform.rotateY}deg) 
            scale(${transform.scale})
          `,
          transformStyle: 'preserve-3d',
          boxShadow: isHovered 
            ? '0 25px 50px -12px rgba(0, 0, 0, 0.8), 0 0 30px rgba(255,255,255,0.1)' 
            : '0 10px 30px -10px rgba(0, 0, 0, 0.5)',
        }}
      >
        {/* Image container with distortion effect */}
        <div className="relative aspect-[4/3] overflow-hidden bg-zinc-900">
          {/* Gradient overlay */}
          <div className={`absolute inset-0 bg-gradient-to-br ${item.color} opacity-60 z-10 mix-blend-overlay`} />
          
          {/* Main image */}
          <img
            src={item.image}
            alt={item.title}
            className="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
            style={{
              filter: isHovered ? 'brightness(1.1)' : 'brightness(0.9)',
            }}
          />
          
          {/* Lens reflection effect */}
          <div 
            className="absolute inset-0 z-20 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            style={{
              background: `linear-gradient(
                ${135 + transform.rotateY * 2}deg,
                transparent 40%,
                rgba(255,255,255,0.1) 50%,
                transparent 60%
              )`,
            }}
          />
          
          {/* Chromatic aberration effect on hover */}
          <div 
            className="absolute inset-0 z-30 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300 mix-blend-screen"
            style={{
              background: `
                linear-gradient(90deg, rgba(255,0,0,0.03) 0%, transparent 50%),
                linear-gradient(-90deg, rgba(0,255,255,0.03) 0%, transparent 50%)
              `,
            }}
          />
        </div>

        {/* Card info */}
        <div className="absolute bottom-0 left-0 right-0 p-4 z-40 bg-gradient-to-t from-black/90 via-black/50 to-transparent">
          <div className="flex items-center gap-2 mb-1">
            <span className="text-xs text-zinc-400 font-mono">{item.year}</span>
            <span className="text-xs text-zinc-600">•</span>
            <span className="text-xs text-zinc-300">{item.brand}</span>
          </div>
          <h3 className="text-white font-medium text-sm mb-2 group-hover:text-zinc-200 transition-colors">
            {item.title}
          </h3>
          <div className="flex flex-wrap gap-1">
            {item.category.map((cat, i) => (
              <span 
                key={i}
                className="text-[10px] px-2 py-0.5 rounded-full bg-white/10 text-zinc-300 border border-white/5"
              >
                {cat}
              </span>
            ))}
          </div>
        </div>
      </div>

      {/* Floating particles on hover */}
      <AnimatePresence>
        {isHovered && (
          <>
            {[...Array(3)].map((_, i) => (
              <motion.div
                key={i}
                className="absolute w-1 h-1 bg-white/30 rounded-full pointer-events-none"
                initial={{ 
                  opacity: 0,
                  x: '50%',
                  y: '50%',
                }}
                animate={{ 
                  opacity: [0, 1, 0],
                  x: `${50 + (i - 1) * 30}%`,
                  y: `${30 - i * 20}%`,
                }}
                exit={{ opacity: 0 }}
                transition={{ 
                  duration: 1.5,
                  repeat: Infinity,
                  delay: i * 0.2,
                }}
              />
            ))}
          </>
        )}
      </AnimatePresence>
    </motion.div>
  );
};

