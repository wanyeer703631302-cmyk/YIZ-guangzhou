{
  "name": "yiz-gallery",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack 3D image gallery with backend integration",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "cd app && npm run dev",
    "dev:api": "tsx watch api/index.ts",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "cd app && npm run build",
    "build:api": "tsc --project tsconfig.api.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:property": "vitest run --grep 'Property'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "validate:config": "tsx scripts/validate-config.ts",
    "postinstall": "npm run prisma:generate",
    "vercel-build": "npm run prisma:generate && npm run prisma:migrate && npm run build:frontend",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vercel/node": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "fast-check": "^3.22.0",
    "prisma": "^6.2.0",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
